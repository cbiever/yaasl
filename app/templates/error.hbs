<div class="layout-row layout-align-center-center" style="height: 100vh">
  <div class="flex-10"/>
  <div class="flex">
    {{#paper-subheader}}{{t 'error.backend'}}{{/paper-subheader}}
    {{#paper-list}}
    {{#each model.errors as |error|}}
      {{#paper-item class="md-3-line md-long-text"}}
        {{paper-icon "error outline" size=48}}
        <div class="md-list-item-text">
          <h3>Status: {{error.status}}</h3>
          <h3>Detail:</h3>
          <p>
            {{{error.detail}}}
          </p>
        </div>
        {{/paper-item}}
      {{/each}}
    {{/paper-list}}
  </div>
  <div class="flex-10"/>
</div>
