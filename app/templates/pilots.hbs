{{#if (media 'isXs')}}
  <div class="layout-row row" style="margin-top: 20px">
    <div class="flex cell">
      <strong>{{t 'pilots.overview.title.name'}}</strong>
    </div>
    <div class="flex cell">
      <strong>{{t 'pilots.overview.title.standard.role'}}</strong>
    </div>
  </div>
  {{#each model as |pilot|}}
    <div class="layout-row row">
      <div class="flex cell">
        {{pilot.name}}
      </div>
      <div class="flex cell">
        {{t pilot.standardRole.i18n}}
      </div>
    </div>
  {{/each}}
{{/if}}

