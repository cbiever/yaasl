<div class="layout-row" style="text-align:right">
  <div class="flex-33">
    {{#if expanded}}
      {{#paper-button iconButton=true onClick=(action 'setExpanded' false)}}
        {{paper-icon "expand less"}}
      {{/paper-button}}
    {{else}}
      {{#paper-button iconButton=true onClick=(action 'setExpanded' true)}}
        {{paper-icon "expand more"}}
      {{/paper-button}}
    {{/if}}
  </div>
  <div class="flex-33">
    {{#if locked}}
      {{#paper-button iconButton=true disabled=true}}
        {{paper-icon "lock outline"}}
      {{/paper-button}}
    {{else}}
      {{#if editable}}
        {{#paper-button iconButton=true onClick=(action 'setEditable' false)}}
          {{paper-icon "done"}}
        {{/paper-button}}
      {{else}}
        {{#paper-button iconButton=true disabled=(not today) onClick=(action 'setEditable' true)}}
          {{paper-icon "mode edit"}}
        {{/paper-button}}
      {{/if}}
    {{/if}}
  </div>
  <div class="flex-33">
    {{#paper-button iconButton=true disabled=(not editable) onClick=(action 'deleteFlight')}}
      {{paper-icon "delete"}}
    {{/paper-button}}
  </div>
</div>
