{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    <h2>
      Yaasl
    </h2>
    <span class="flex"/>
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button}}
          {{location.name}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content as |content|}}
        {{#each locations as |location|}}
        {{#content.menu-item onClick=(action 'setLocation' location)}}
          {{location.name}}
        {{/content.menu-item}}
        {{/each}}
      {{/menu.content}}
    {{/paper-menu}}
    {{#paper-button onClick=(action (mut showDatepicker))}}{{moment-format date 'DD-MM-YYYY'}}{{/paper-button}}
    {{#if showDatepicker}}
      {{pikaday-inputless value=date options=(hash postion='bottom' reposition=false) onSelection=(action 'setDate')}}
    {{/if}}
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button}}
          {{i18n.locale}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content as |content|}}
        {{#each i18n.locales as |locale|}}
        {{#content.menu-item onClick=(action 'setLocale' locale)}}
          {{locale}}
        {{/content.menu-item}}
        {{/each}}
      {{/menu.content}}
    {{/paper-menu}}
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "menu"}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content width=3 as |content|}}
        {{#content.menu-item onClick=(transition-to 'aircraft')}}
          {{paper-icon "airplanemode active"}}
          <span>{{t 'menu.aircraft'}}</span>
        {{/content.menu-item}}
        {{#content.menu-item onClick=(transition-to 'pilots')}}
          {{paper-icon "perm identity"}}
          <span>{{t 'menu.pilots'}}</span>
        {{/content.menu-item}}
      {{/menu.content}}
    {{/paper-menu}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
