{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "menu"}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content width=3 as |content|}}
        {{#content.menu-item disabled=(not session.authorization) onClick=(transition-to 'aircraft')}}
          {{paper-icon "airplanemode active"}}
          <span>{{t 'menu.aircraft'}}</span>
        {{/content.menu-item}}
        {{#content.menu-item disabled=(not session.authorization) onClick=(transition-to 'pilots')}}
          {{paper-icon "perm identity"}}
          <span>{{t 'menu.pilots'}}</span>
        {{/content.menu-item}}
        {{#if (eq router.currentRouteName 'start-list')}}
          {{#content.menu-item disabled=(not session.authorization) onClick=(action 'showKtrax')}}
            {{paper-icon "flight takeoff"}}
            <span>{{t 'menu.ktrax'}}</span>
          {{/content.menu-item}}
        {{else}}
          {{#content.menu-item disabled=(not session.authorization) onClick=(action 'showStartList')}}
            {{paper-icon "flight takeoff"}}
            <span>{{t 'menu.logbook'}}</span>
          {{/content.menu-item}}
        {{/if}}
        {{paper-divider}}
        {{#content.menu-item disabled=(not session.authorization) onClick=(action 'downloadPDF')}}
          {{paper-icon "get app"}}
          <span>PDF</span>
        {{/content.menu-item}}
        {{#content.menu-item disabled=(not session.authorization) onClick=(action 'downloadCSV')}}
          {{paper-icon "get app"}}
          <span>CSV</span>
        {{/content.menu-item}}
        {{paper-divider}}
        {{#content.menu-item disabled=(not session.authorization) onClick=(action 'showFeedbackDialog')}}
          {{paper-icon "thumbs up down"}}
          <span>Feedback</span>
        {{/content.menu-item}}
        {{paper-divider}}
        {{#content.menu-item disabled=(not session.authorization) onClick=(action 'logoff')}}
          {{paper-icon "get app"}}
          <span>{{t 'login.logoff'}}</span>
        {{/content.menu-item}}
      {{/menu.content}}
    {{/paper-menu}}
    <h2>
      Yaasl
    </h2>
    <span class="flex"/>
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button disabled=(not session.authorization)}}
          {{location.name}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content as |content|}}
        {{#each locations as |location|}}
        {{#content.menu-item onClick=(action 'setLocation' location)}}
          {{location.name}}
        {{/content.menu-item}}
        {{/each}}
      {{/menu.content}}
    {{/paper-menu}}
    {{#paper-button disabled=(not session.authorization) onClick=(action (mut showDatepicker))}}{{moment-format date 'DD-MM-YYYY'}}{{/paper-button}}
    {{#if showDatepicker}}
      {{pikaday-inputless value=date options=(hash postion='bottom' reposition=false) onSelection=(action 'setDate')}}
    {{/if}}
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button}}
          {{i18n.locale}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content as |content|}}
        {{#each i18n.locales as |locale|}}
        {{#content.menu-item onClick=(action 'setLocale' locale)}}
          {{locale}}
        {{/content.menu-item}}
        {{/each}}
      {{/menu.content}}
    {{/paper-menu}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
{{#if showFeedbackDialog}}
  {{#paper-dialog class="flex-70" onClose=(action "closeFeedbackDialog" "cancel") clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>Feedback</h2>
        <span class="flex"/>
        {{#paper-button iconButton=true onClick=(action "closeFeedbackDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{#paper-dialog-content}}
      <div class="flex layout-row layout-align-space-around-center">
        {{#paper-button iconButton=true onClick=(action (mut feedback) 'positive')}}{{paper-icon "thumb up"}}{{/paper-button}}
        {{#paper-button iconButton=true onClick=(action (mut feedback) 'neutral')}}{{paper-icon "thumbs up down"}}{{/paper-button}}
        {{#paper-button iconButton=true onClick=(action (mut feedback) 'negative')}}{{paper-icon "thumb down"}}{{/paper-button}}
      </div>
      {{paper-input textarea=true block=true maxlength=300 value=feedbackComment onChange=(action (mut feedbackComment))}}
    {{/paper-dialog-content}}
    {{#paper-dialog-actions class="layout-row layout-align-end-center"}}
      {{#paper-button onClick=(action "closeFeedbackDialog" "cancel")}}Cancel{{/paper-button}}
      {{#paper-button onClick=(action "closeFeedbackDialog" "ok")}}OK{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
